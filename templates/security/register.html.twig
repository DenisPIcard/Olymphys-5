{% extends 'base1.html.twig' %}
{% form_theme registrationForm _self %}
{% block form_row %}
    {%- set widget_attr = {} -%}
    {%- if help is not empty -%}
        {%- set widget_attr = {attr: {'aria-describedby': id ~"_help"}} -%}
    {%- endif -%}

    {{- form_label(form, null, {
        label_attr: { class: 'sr-only' }
    }) -}}
    {{- form_errors(form) -}}
    {{- form_widget(form, widget_attr) -}}
    {{- form_help(form) -}}
{% endblock %}
{% block _user_registration_form_agreeTerms_row %}
    <div class="checkbox mb-3">
        {{ form_errors(form) }}
        <label>
            <input type="checkbox" name="{{ full_name }}" required> Je suis bien membre de l'équipe de ce lycée
        </label>
    </div>
{% endblock %}    
{% block title %}Créer un compte{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h1 class="h3 mb-3 font-weight-normal">S'enregistrer</h1>
            {{ form_start(registrationForm, {
                'attr': {'class': 'form-signin'}
            }) }}
            {{ form_row(registrationForm.username, {
                'attr': { placeholder: 'Pseudo' }
            }) }}
            {{ form_row(registrationForm.email, {
                'attr': { placeholder: 'Email' }
            }) }}
            {{ form_row(registrationForm.plainPassword.first, {
                'attr': { placeholder: 'Mot de passe' }
            }) }}
            {{ form_row(registrationForm.plainPassword.second, {
                'attr': { placeholder: 'Confirmez le mot de passe' }
            }) }}
            {{ form_row(registrationForm.nom, {
                'attr': { placeholder: 'Votre nom' }
            }) }}
            {{ form_row(registrationForm.rne, {
                'attr': { placeholder: 'Le RNE de votre établissement' }
            }) }}
            {{ form_row(registrationForm.agreeTerms) }}

            {{ form_widget(registrationForm) }}
            <button name="register" class="btn btn-lg btn-primary btn-block" type="submit">
                S'enregistrer
            </button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
    {% endblock %}
