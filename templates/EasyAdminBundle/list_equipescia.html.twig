{# templates/Admin/customizations/list_equipescia.html.twig #}
{% extends '@!EasyAdmin/layout.html.twig' %}

{% block content %}
    <div class="content">
        {% block content_header_wrapper %}
            {% block content_header %}
                <section class="content-header">
                    <div class="d-flex flex-row justify-content-between align-content-center w-100">
                        <div class="content-header-title">
                            <h3 class=\"title\">
                                {% block page_title %}
                                    {# } {% if app.request.query.get('menuIndex')==7 %}
                                                {%  set titre_page='Liste des établissements'%}
                                            {% else %}
                                                {% if  app.request.query.get('filters')==null%}
                                                    {%  set titre_page='Equipes de la '~ app.session.get('edition').ed ~'<sup>e</sup> édition' %}

                                                {% endif %}
                                                {% if  app.request.query.get('filters')!=null%}
                                                    {% if  app.request.query.get('filters').edition is defined%}
                                                        {%  set titre_page='Equipes de la '~ app.session.get('titreedition').ed~'<sup>e</sup> édition'%}

                                                    {% endif%}
                                                    {% if  app.request.query.get('filters').centre is defined%}
                                                        {%  set titre_page='Centre cia : '~app.session.get('titrecentre').centre%}

                                                    {% endif%}
                                                {% endif %}
                                            {% endif %}
                                        {{ titre_page|raw}} #}
                                    {{ parent() }}
                                {% endblock %}
                            </h3>
                        </div>
                        {% block page_actions_wrapper %}
                            <div class="page-actions">
                                {{ parent() }}
                                {% if app.request.query.get('menuIndex')==7 %}
                                    {% if  app.request.query.get('filters')==null %}
                                        <a href="{{ path('etablissements_tableau_excel',{ideditioncentre:app.session.get('edition').id~'-'~0}) }}"
                                           type="button" class="btn btn-primary">Extraire un tableau excel des
                                            établissements</a>
                                    {% endif %}
                                    {% if  app.request.query.get('filters')!=null %}
                                        {% if  app.request.query.get('filters').centre is defined %}
                                            {% set idcentre= app.request.query.get('filters').centre.value %}
                                        {% else %}
                                            {% set idcentre= 0 %}
                                        {% endif %}
                                        {% if  app.request.query.get('filters').edition is defined %}
                                            <a href="{{ path('etablissements_tableau_excel',{ideditioncentre:app.request.query.get('filters').edition.value~'-'~idcentre}) }}"
                                               type="button" class="btn btn-primary">Extraire un tableau excel des
                                                établissements</a>
                                        {% else %}
                                            <a href="{{ path('etablissements_tableau_excel',{ideditioncentre:'na-'~idcentre}) }}"
                                               type="button" class="btn btn-primary">Extraire un tableau excel des
                                                établissements</a>
                                        {% endif %}
                                    {% endif %}
                                {% else %}
                                    {% if  app.request.query.get('filters')==null %}
                                        <a href="{{ path('equipes_tableau_excel',{ideditioncentre:app.session.get('edition').id~'-'~0}) }}"
                                           type="button" class="btn btn-primary">Extraire un tableau excel des
                                            équipes</a>
                                    {% endif %}
                                    {% if  app.request.query.get('filters')!=null %}
                                        {% if  app.request.query.get('filters').centre is defined %}
                                            {% set idcentre= app.request.query.get('filters').centre.value %}
                                        {% else %}
                                            {% set idcentre= 0 %}
                                        {% endif %}
                                        {% if  app.request.query.get('filters').edition is defined %}
                                            <a href="{{ path('equipes_tableau_excel',{ideditioncentre:app.request.query.get('filters').edition.value~'-'~idcentre}) }}"
                                               type="button" class="btn btn-primary">Extraire un tableau excel des
                                                équipes</a>
                                        {% else %}
                                            <a href="{{ path('equipes_tableau_excel',{ideditioncentre:'na-'~idcentre}) }}"
                                               type="button" class="btn btn-primary">Extraire un tableau excel des
                                                équipes</a>
                                        {% endif %}
                                    {% endif %}
                                {% endif %}
                            </div>
                        {% endblock page_actions_wrapper %}
                    </div>
                </section>
            {% endblock content_header %}
        {% endblock content_header_wrapper %}
        <section id="main" class="content-body">
            {% block main %}

                {{ parent() }}
            {% endblock %}
        </section>
    </div>
{% endblock %}