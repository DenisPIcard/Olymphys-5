{% extends "base1.html.twig" %}
{% block title %} Palmarès définitif {% endblock %}

{% block titre3 %} Palmarès définitif {% endblock %}

{% block navigation %}
    {{ include ("secretariatjury/navigation.html.twig") }}
{% endblock %}

{% block body %}
    {# <div class="well"> #}
    <h2>
        Les {{ NbrePremierPrix }} premiers prix
    </h2>
    <table class="table table-striped">

        <tr class="danger">
            <th>Équipe</th>
            <th>Titre du projet</th>
        </tr>

        {% for premier in ListPremPrix %}
            <tr class="danger">
                <td><span class="btn btn-primary btn-lg"> {{ premier.lettre }}</span></td>
                <td>{{ premier.TitreProjet }}</td>
            </tr>
        {% endfor %}

    </table>
    {# </div> #}

    {# <div class="well"> #}
    <h2>
        Les {{ NbreDeuxPrix }} deuxièmes prix
    </h2>
    <table class="table table-striped">

        <tr class="warning">
            <th>Équipe</th>
            <th>Titre du projet</th>
        </tr>

        {% for deux in ListDeuxPrix %}
            <tr class="warning">
                <td><span class="btn btn-primary btn-lg"> {{ deux.lettre }} </span></td>
                <td>{{ deux.TitreProjet }}</td>
            </tr>
        {% endfor %}

    </table>
    {# </div> #}

    {# <div class="well"> #}
    <h2> Les {{ NbreTroisPrix }} troisièmes prix </h2>
    <table class="table table-striped">

        <tr class="active">
            <th>Équipe</th>
            <th>Titre du projet</th>
        </tr>

        {% for trois in ListTroisPrix %}
            <tr class="active">
                <td><span class="btn btn-primary btn-lg">{{ trois.lettre }}</span></td>
                <td>{{ trois.TitreProjet }}</td>
            </tr>
        {% endfor %}

    </table>
    {# </div> #}
{% endblock %}