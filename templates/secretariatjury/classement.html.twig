{% extends "base1.html.twig" %}
{% block title %} Classement des équipes {% endblock %}

{% block titre3 %} Classement des équipes {% endblock %}

{% block navigation %}
    {{ include ("secretariatjury/navigation.html.twig") }}
{% endblock %}

{% block body %}
    <div>
        <a href="#" data-toggle="modal" data-target="#modalinfocalculnote" class="fa fa-question-circle"></a>
    </div>
    <div class="table-responsive">

        <table class="table table-striped">
            <thead>
            <tr>
                <th>Rang</th>
                <th>Éq.</th>
                <th>Projet</th>
                <th title="points">Points</th>
            </tr>
            </thead>
            <tbody>
            {% for equipes in classement %}
                <tr>
                    <th>{{ loop.index }}  </th>
                    <td>
                        <button type="button" class="btn btn-primary btn-lg">{{ equipes.equipeinter.lettre }}</button>
                    </td>
                    <td> {{ equipes.equipeinter.titreProjet }} </td>
                    <td>{{ equipes.total|number_format(2) }} </td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>

    {{ include('modales/modale_info_calcul_note_equipe.html.twig') }}
{% endblock %}