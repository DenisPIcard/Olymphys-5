            <span class="col-sm-2">
      {# Génération de l'input. #}
                {{ form_widget(form.classement, {'attr': {'class': 'form-control'}}) }}
    </span>

        </div>


        <div>
            {{ form_widget(form.Enregistrer, {'attr': {'class': 'btn btn-primary'}}) }}
