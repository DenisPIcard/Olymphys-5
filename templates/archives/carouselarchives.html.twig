<div class="containercarouselarchives">


    <div id="carousel{{ concours }}{{ edition_affichee.id }}" class="carousel slide " data-ride="carousel">
        <div class="d-flex align-items-center flex-column" style="height: auto;">
            <div class="p-2 ">
                <div class="carousel-inner" style="width:260px !important; height:300px!important ;">
                    {% set i = 1 %}

                    {% for photo in photoscarousel %}

                        {% if i==1 %}

                            <div class="carousel-item active " data-interval="5000">
                                <div class="containercarouselarchives">

                                    <div class="p-2">
                                        <img src=" {{ asset('upload/photos/thumbs/'~photo.photo) }}"
                                             alt="{{ photo.equipe.TitreProjet }}" title="{{ photo.equipe.TitreProjet }}"
                                             class="img-fluid">
                                    </div>
                                    <div class="carousel-caption d-none d-md-block"
                                         style="transform: translateY(+40%);background:rgba(0, 0, 0, 0.0); color:black">

                                        <div class="smallsize">{{ photo.equipe.titreProjet }}</div>

                                    </div>
                                </div>

                            </div>
                        {% endif %}
                        {% if i>1 %}

                            <div class="carousel-item">
                                <div class="containercarouselarchives">

                                    <div class="p-2">
                                        <img src=" {{ asset('upload/photos/thumbs/'~photo.photo) }}"
                                             alt="{{ photo.equipe.TitreProjet }}" title="{{ photo.equipe.TitreProjet }}"
                                             class="img-fluid">
                                    </div>
                                    <div class="carousel-caption d-none d-md-block"
                                         style="transform: translateY(+40%); background:rgba(0, 0, 0, 0.0); color:black">

                                        <div class="smallsize">{{ photo.equipe.titreProjet }}</div>
                                    </div>

                                </div>

                            </div>

                        {% endif %}
                        {% set i= i+1 %}

                    {% endfor %}


                    <a class="carousel-control-prev" href="#carousel{{ concours }}{{ edition_affichee.id }}"
                       role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carousel{{ concours }}{{ edition_affichee.id }}"
                       role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

</div>
