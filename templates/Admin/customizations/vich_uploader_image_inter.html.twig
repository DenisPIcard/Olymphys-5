{# templates/vich_uploader_image.html.twig #}


<a href="{{ field_options.base_path ~ '/' ~ value }}" class="easyadmin-thumbnail"
   data-featherlight="#easyadmin-lightbox-{{ item.id }}" data-featherlight-close-on-click="anywhere">
    {# the second parameter is the name of the property with the UploadableField annotation  #}


    <img src="{{ asset('/upload/images/'~item.edition.ed~'/int/thumb/'~ value) }}">
</a>

<div id="easyadmin-lightbox-{{ item.id }}" class="easyadmin-lightbox">
    {# the second parameter is the name of the property with the UploadableField annotation #}
    <img src="{{ asset( '/upload/images/'~item.edition.ed~'/int/thumb/'~ value) }}">
</div>
