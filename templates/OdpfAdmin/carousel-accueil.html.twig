<div class="container-fluid cont-accueil">
    {# cont-acceuil (')odpf-acceuil.css l.14) défint les padding et marging) #}

    <div id="carousel" class="carousel slide " data-ride="carousel">
        {# class carousel précise la position (relative) du carousel #}
        <div class="d-flex align-items-center flex-column">
            <div class="p-2 ">
                {# définit un padding de 0,5 rem #}
                <div class="carousel-inner black" style="width:338px !important; height:239px !important ;">
                    {# carousel-inner est un css de Bootstrap, black est défini dans fonds.css en l.7 #}


                    {% if article is defined and article.carousel!=null %}
                        {% set nbdiapos=article.carousel.images|length  %}
                        {% for n in 1..nbdiapos %}
                        {% set imageaffichee = null %}
                            {% for image in article.carousel.images %}
                                    {% if image.numero == n %}
                                        {% set imageaffichee =image %}
                                    {% endif %}
                             {% endfor%}
                            {# boucle de défilement des images #}

                            {% if n==1 %}

                                <div class="carousel-item active" data-interval="5000">

                                    <div class="text-center"><img
                                                src="{{ asset('odpf/odpf-images/imagescarousels/'~imageaffichee.name) }}"
                                                alt="{{ imageaffichee.coment }}" class="img-fluid"
                                                style="width:338px !important; height:230px !important ;">

                                        <div class="carousel-caption d-none d-md-block"
                                             style="transform: translateY(110%);background:rgba(0, 0, 0, 0.0)">

                                            <div class="smallsize">{{ imageaffichee.coment }}</div>
                                        </div>
                                    </div>

                                </div>
                            {% endif %}
                            {% if n>1 %}
                                <div class="carousel-item">

                                    <div class="text-center"><img
                                                src="{{ asset('odpf/odpf-images/imagescarousels/'~imageaffichee.name) }}"
                                                alt="{{ imageaffichee.coment }}" class="img-fluid"
                                                style="width:auto !important; height:287px !important ;">
                                        <div class="carousel-caption d-none d-md-block"
                                             style="transform: translateY(110%); background:rgba(0, 0, 0, 0.0)">

                                            <div class="smallsize">{{ imageaffichee.coment }}</div>
                                        </div>

                                    </div>

                                </div>

                            {% endif %}


                        {% endfor %}
                    {% endif %}

                    <div class="carousel-control"></div>
                    {# ces contrôles (flèches) viennet de Bootstrap #}
                    <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                        {# <span class="carousel-control-prev-icon" aria-hidden="false"></span> #}
                        <img src="{{ asset('odpf/odpf-images/diapo-arwl-37x37.png') }}" style="align-self: flex-end; "/>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                        {# }<span class="carousel-control-next-icon" aria-hidden="false" ></span>--> #}
                        <img src="{{ asset('odpf/odpf-images/diapo-arwr-37x37.png') }}" style="align-self: flex-end; "/>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>



